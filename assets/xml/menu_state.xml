<?xml version="1.0" encoding="utf-8" ?>
<data>
	<include id="ui_globals"/>
	
	<sprite color="0x000000" x="0" y="0" width="100%" height="100%" id="container" />
	
	
	<button x="0" y="0" width="5%" height="5%" id="mute" label="Mute" group="Mute"  visible="true">
		<param type="string" value="mute" />
		<anchor    x-flush="left" y-flush="bottom"  x="container.left" y="container.bottom"/>
		<text use_def="vera10" color="0xffffff">
			<color id="over" value="0xffff00"/>
		</text>
		
		<!-- <graphic name="all" image="assets/images/sheet_button.png" slice9="6,6,12,12"/> -->
	</button> 
	
	<chrome id="mainmenu" x="25%" y="15%" width="50%" height="70%" group="menu" />
	
	<button x="0" y="0" width="5%" height="5%" id="back_button" label="Menu" group="menu"  visible="true">
		<param type="string" value="back" />
		<anchor    x-flush="left" y-flush="bottom"  x="container.right" y="container.top"/>
		<text use_def="vera10" color="0xffffff">
			<color id="over" value="0xffff00"/>
		</text>
		
		<!-- <graphic name="all" image="assets/images/sheet_button.png" slice9="6,6,12,12"/> -->
	</button> 
		
	<button x="mainmenu.width*0.25" y="mainmenu.height*0.2" width="25%" height="10%" id="start_button" label="Start" group="menu">
		<param type="string" value="start"/>
		<anchor x="mainmenu.left" y="mainmenu.top" />
		<text use_def="vera10" color="0xffffff">
			<color id="over" value="0xffff00"/>
		</text>
	</button>  
	
	<button x="mainmenu.width*0.25" y="mainmenu.height*0.4" width="25%" height="10%" id="options_button" label="Options" group="menu">
		<param type="string" value="options"/>
		<anchor x="mainmenu.left" y="mainmenu.top" />
		<text use_def="vera10" color="0xffffff">
			<color id="over" value="0xffff00"/>
		</text>
	</button>  
	
	
	<button x="mainmenu.width*0.25" y="mainmenu.height*0.6" width="25%" height="10%" id="credits_button" label="Credits" group="menu">
		<param type="string" value="credits"/>
		<anchor x="mainmenu.left" y="mainmenu.top" />
		<text use_def="vera10" color="0xffffff">
			<color id="over" value="0xffff00"/>
		</text>
	</button>  
	
	
</data>
